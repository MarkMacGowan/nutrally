<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeScreen">

    <ImageView
        android:id="@+id/logoImg9"
        android:layout_width="331dp"
        android:layout_height="127dp"
        android:layout_marginStart="217dp"
        android:layout_marginEnd="217dp"
        android:layout_marginBottom="1dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toTopOf="@+id/homeLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/homeLbl"
        style="@style/Widget.MaterialComponents.TextView"
        android:layout_width="350dp"
        android:layout_height="83dp"
        android:layout_marginStart="286dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="3dp"
        android:contextClickable="false"
        android:cursorVisible="false"
        android:fontFamily="monospace"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textColor="#049792"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scanBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImg9" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#409143"
        android:enabled="true"
        android:fontFamily="monospace"
        android:onClick="exit"
        android:text="Log Out"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/optionsBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileBtn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/optionsBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#409143"
        android:enabled="true"
        android:fontFamily="monospace"
        android:text="Options"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoutBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scanBtn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#409143"
        android:enabled="true"
        android:fontFamily="monospace"
        android:text="Profile"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/scanBtn"
        app:layout_constraintTop_toBottomOf="@+id/homeLbl"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:backgroundTint="#409143"
        android:enabled="true"
        android:fontFamily="monospace"
        android:text="Scan"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/optionsBtn"
        app:layout_constraintEnd_toStartOf="@+id/profileBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeLbl"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>